/* pages/inventory/list/list.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题样式 */
.header-section {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #4285f4, #1976d2);
  margin: -20rpx -20rpx 30rpx -20rpx;
  color: white;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 库存类型列表样式 */
.inventory-types {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.inventory-type-item {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.inventory-type-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.type-icon {
  margin-right: 30rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 50%;
}

.type-info {
  flex: 1;
}

.type-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.type-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.type-count {
  font-size: 24rpx;
  color: #4285f4;
  font-weight: 500;
}

.type-actions {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}

/* 权限说明样式 */
.permission-notice {
  display: flex;
  align-items: center;
  background: #f0f8ff;
  border: 1rpx solid #d6ebff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 30rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
} 