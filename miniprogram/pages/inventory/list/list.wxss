  padding: 8rpx 16rpx;
  background: linear-gradient(45deg, #4285f4, #1976d2);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-left: 12rpx;
}

.batch-import-button:active {
  transform: scale(0.95);
  background: linear-gradient(45deg, #1976d2, #1565c0);
}

