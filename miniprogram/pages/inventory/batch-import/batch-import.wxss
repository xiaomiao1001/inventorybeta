/* pages/inventory/batch-import/batch-import.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

/* ===== 极简文字版导航 ===== */
.header-modern {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 100;
  /* 移除所有装饰样式 */
}

.breadcrumb {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
  gap: 8rpx;
}

.breadcrumb-item {
  font-size: 20rpx;
  color: #999;
  font-weight: 400;
}

.breadcrumb-current {
  font-size: 20rpx;
  color: #4285f4;
  font-weight: 500;
}

.header-title {
  margin-bottom: 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
}

.title-main {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.2;
  margin-bottom: 0;
  letter-spacing: -0.5px;
}

/* ===== 页面内容区域 ===== */
.content {
  height: calc(100vh - 180rpx);
  padding: 140rpx 30rpx 0 30rpx;  /* 增加顶部内边距为导航腾出空间 */
  box-sizing: border-box;
}

/* ===== 通用区块样式 ===== */
.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
}

/* ===== 数据格式说明区域 ===== */
.format-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.format-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.format-example {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 4rpx solid #4285f4;
}

.example-header {
  margin-bottom: 16rpx;
}

.header-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  word-break: break-all;
}

.example-content {
  border-top: 1px solid #e8eaed;
  padding-top: 16rpx;
}

.sample-text {
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
}

/* ===== 数据输入区域 ===== */
.input-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.input-counter {
  margin-left: auto;
}

.counter-text {
  font-size: 22rpx;
  color: #999;
}

.data-textarea {
  width: 100%;
  min-height: 300rpx;
  max-height: 600rpx;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
  resize: none;
  transition: all 0.2s ease;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
  margin-bottom: 24rpx;
}

.data-textarea:focus {
  border-color: #4285f4;
  background: #fff;
  outline: none;
}

.data-textarea::placeholder {
  color: #999;
  line-height: 1.6;
}

/* 快速操作按钮 */
.quick-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  background: #e8eaed;
  transform: scale(0.95);
}

.btn-text {
  font-size: 24rpx;
  color: #666;
}

/* ===== 解析结果区域 ===== */
.result-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 成功结果 */
.success-result {
  margin-bottom: 24rpx;
}

.result-summary {
  margin-bottom: 16rpx;
}

.summary-text {
  font-size: 26rpx;
  color: #52c41a;
  font-weight: 500;
}

.result-preview {
  background: #f6ffed;
  border-radius: 8rpx;
  padding: 16rpx;
  border: 1px solid #b7eb8f;
}

.preview-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 0;
  border-bottom: 1px solid #d9f7be;
}

.preview-item:last-child {
  border-bottom: none;
}

.preview-vin {
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  font-family: monospace;
}

.preview-model {
  font-size: 22rpx;
  color: #666;
  flex: 1;
  text-align: center;
}


.preview-config {
  font-size: 22rpx;
  color: #666;
  text-align: right;
}

.more-indicator {
  text-align: center;
  padding: 8rpx 0;
  border-top: 1px solid #d9f7be;
  margin-top: 8rpx;
}

.more-text {
  font-size: 22rpx;
  color: #999;
}

/* 错误结果 */
.error-result {
  margin-top: 24rpx;
}

.error-summary {
  margin-bottom: 16rpx;
}

.error-text {
  font-size: 26rpx;
  color: #ff4757;
  font-weight: 500;
}

.error-list {
  background: #fff2f0;
  border-radius: 8rpx;
  padding: 16rpx;
  border: 1px solid #ffccc7;
}

.error-item {
  padding: 8rpx 0;
  border-bottom: 1px solid #ffd4d0;
}

.error-item:last-child {
  border-bottom: none;
}

.error-msg {
  font-size: 22rpx;
  color: #ff4757;
  line-height: 1.4;
}

.more-errors {
  text-align: center;
  padding: 8rpx 0;
  border-top: 1px solid #ffd4d0;
  margin-top: 8rpx;
}

/* ===== 底部操作栏 ===== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1px solid #f0f0f0;
  padding: 24rpx;
  z-index: 100;
}

.action-info {
  text-align: center;
  margin-bottom: 16rpx;
}

.info-text {
  font-size: 24rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.parse-btn {
  flex: 1;
  height: 88rpx !important;
  border-radius: 12rpx !important;
  font-size: 28rpx !important;
  border: 1px solid #d9d9d9 !important;
  background: white !important;
  color: #666 !important;
}

.parse-btn:not([disabled]):active {
  background: #f5f5f5 !important;
}

.import-btn {
  flex: 2;
  height: 88rpx !important;
  border-radius: 12rpx !important;
  font-size: 28rpx !important;
  background: linear-gradient(135deg, #4285f4, #1976d2) !important;
  border: none !important;
  color: white !important;
}

.import-btn:not([disabled]):active {
  background: linear-gradient(135deg, #1976d2, #1565c0) !important;
}

.parse-btn[disabled],
.import-btn[disabled] {
  background: #f5f5f5 !important;
  color: #bbb !important;
  border-color: #e8e8e8 !important;
}

/* ===== 响应式适配 ===== */
@media screen and (max-width: 750rpx) {
  .content {
    padding: 0 16rpx;
    padding-bottom: 140rpx;
  }
  
  .format-section,
  .input-section,
  .result-section {
    padding: 24rpx;
    margin: 16rpx 0;
  }
  
  .data-textarea {
    min-height: 250rpx;
    max-height: 500rpx;
    padding: 20rpx;
    font-size: 24rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .parse-btn,
  .import-btn {
    flex: none;
    height: 80rpx !important;
  }
}

/* ===== 动画效果 ===== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-section {
  animation: fadeIn 0.3s ease-out;
}

/* ===== 深色模式支持 ===== */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #1a1a1a 0%, #0f0f0f 40%);
  }
  
  .header,
  .format-section,
  .input-section,
  .result-section,
  .bottom-actions {
    background: #1e1e1e;
    border-color: #333;
  }
  
  .title-text,
  .section-title,
  .header-text {
    color: #ffffff;
  }
  
  .data-textarea {
    background: #2a2a2a;
    border-color: #444;
    color: #fff;
  }
  
  .data-textarea:focus {
    background: #333;
  }
} 