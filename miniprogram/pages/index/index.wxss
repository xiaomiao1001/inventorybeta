/**index.wxss**/
.container {
  padding: 10rpx 20rpx 20rpx 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 精简的头部样式 - 只占5% */
.compact-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 15rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  height: 80rpx;
}

.user-compact {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.welcome-compact {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.role-tag-compact {
  display: inline-block;
}

.role-text-compact {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
}

.role-text-compact.owner {
  background: linear-gradient(45deg, #FF6B6B, #FF8E8E);
}

.role-text-compact.admin {
  background: linear-gradient(45deg, #4ECDC4, #6FDDDB);
}

.role-text-compact.sales {
  background: linear-gradient(45deg, #45B7D1, #6BC5E8);
}

.role-text-compact.dealer {
  background: linear-gradient(45deg, #96CEB4, #B8DAC6);
}

.logout-compact {
  padding: 10rpx;
  background: #f8f9fa;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.logout-compact:active {
  background: #e9ecef;
  transform: scale(0.95);
}

/* 精简的搜索框样式 */
.search-compact {
  margin-bottom: 20rpx;
}

/* 原有用户信息头部样式保留（用于其他角色） */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  flex: 1;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.role-tag {
  display: inline-block;
}

.role-text {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.role-text.owner {
  background: linear-gradient(45deg, #FF6B6B, #FF8E8E);
}

.role-text.admin {
  background: linear-gradient(45deg, #4ECDC4, #6FDDDB);
}

.role-text.sales {
  background: linear-gradient(45deg, #45B7D1, #6BC5E8);
}

.role-text.dealer {
  background: linear-gradient(45deg, #96CEB4, #B8DAC6);
}

.logout-btn {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

/* 搜索框样式 */
.search-section {
  margin-bottom: 30rpx;
}

/* 功能模块样式 */
.section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(45deg, #4285f4, #6FA8F5);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 所有者宽功能按钮样式 */
.function-grid-wide {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.function-item-wide {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50rpx 30rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
  border-radius: 20rpx;
  border: 2rpx solid #f0f2f5;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  min-height: 160rpx;
}

.function-item-wide::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(66, 133, 244, 0.1) 0%, rgba(111, 168, 245, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.function-item-wide:active::before {
  opacity: 1;
}

.function-item-wide:active {
  transform: scale(0.98);
  border-color: #4285f4;
}

.function-text-wide {
  font-size: 32rpx;
  color: #333;
  margin-top: 20rpx;
  text-align: center;
  font-weight: 600;
}

/* 原有功能网格布局 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #f0f2f5;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.function-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(66, 133, 244, 0.1) 0%, rgba(111, 168, 245, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.function-item:active::before {
  opacity: 1;
}

.function-item:active {
  transform: scale(0.98);
  border-color: #4285f4;
}

.function-text {
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
  text-align: center;
  font-weight: 500;
}

/* 经销商提示样式 */
.dealer-notice {
  grid-column: 1 / -1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #FFF3E0 0%, #FFECB3 100%);
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.notice-text {
  font-size: 28rpx;
  color: #FF8F00;
  margin-left: 10rpx;
}

/* 横向库存概览样式 */
.inventory-overview-horizontal {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.inventory-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8fffe 100%);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 2rpx solid #e8f5e8;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.inventory-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 35rpx rgba(0, 0, 0, 0.15);
}

.inventory-card-header {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.inventory-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hongri-icon {
  background: linear-gradient(135deg, #E8F5E8, #C8E6C9);
}

.secondhand-icon {
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
}

.others-icon {
  background: linear-gradient(135deg, #E3F2FD, #BBDEFB);
}

.inventory-card-content {
  text-align: center;
}

.inventory-card-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.inventory-card-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
  margin-bottom: 5rpx;
}

.inventory-card-unit {
  font-size: 20rpx;
  color: #999;
}

/* 原有库存概览样式保留 */
.inventory-overview {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.inventory-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: linear-gradient(135deg, #f8fff8 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e8f5e8;
  transition: all 0.3s ease;
}

.inventory-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
  border-color: #4CAF50;
}

.inventory-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.inventory-count {
  font-size: 32rpx;
  font-weight: bold;
  color: #4CAF50;
}

.inventory-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.inventory-status.available {
  background: linear-gradient(45deg, #4CAF50, #66BB6A);
}

/* 快速统计样式 */
.stats-overview {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.stats-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #f0f8ff 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #e3f2fd;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #2196F3;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .function-grid, .function-grid-wide {
    grid-template-columns: 1fr;
  }
  
  .inventory-overview-horizontal {
    grid-template-columns: 1fr;
  }
  
  .stats-overview {
    flex-direction: column;
  }
}

/* TDesign组件样式覆盖 */
.t-search {
  border-radius: 16rpx !important;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.t-grid {
  border-radius: 16rpx !important;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.t-cell-group {
  border-radius: 16rpx !important;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
