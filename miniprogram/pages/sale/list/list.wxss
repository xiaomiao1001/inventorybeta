/* pages/sale/list/list.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题样式 */
.header-section {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #FF9800, #F57C00);
  margin: -20rpx -20rpx 30rpx -20rpx;
  color: white;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 出库类型样式 */
.sale-types {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.sale-type-item {
  display: flex;
  align-items: flex-start;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.sale-type-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.type-icon {
  padding: 20rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 10rpx;
}

.type-icon.retail {
  background: linear-gradient(135deg, #e3f2fd, #bbdefb);
}

.type-icon.wholesale {
  background: linear-gradient(135deg, #fff3e0, #ffcc80);
}

.type-content {
  flex: 1;
}

.type-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.type-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.type-badge {
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

.type-badge.retail {
  background: linear-gradient(45deg, #4285f4, #1976d2);
}

.type-badge.wholesale {
  background: linear-gradient(45deg, #FF9800, #F57C00);
}

.type-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.type-features {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.feature-tag {
  padding: 6rpx 12rpx;
  background: #f0f2f5;
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #666;
}

.type-arrow {
  margin-left: 10rpx;
  margin-top: 40rpx;
}

/* 最近出库记录样式 */
.recent-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(45deg, #FF9800, #F57C00);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.recent-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.recent-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.recent-info {
  flex: 1;
}

.recent-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.recent-customer {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.recent-date {
  font-size: 22rpx;
  color: #999;
}

.recent-amount {
  text-align: right;
}

.amount-label {
  font-size: 20rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.amount-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF9800;
}

/* 权限说明样式 */
.permission-notice {
  display: flex;
  align-items: center;
  background: #f0f8ff;
  border: 1rpx solid #d6ebff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
} 