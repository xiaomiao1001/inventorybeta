.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header-section {
  text-align: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #2196F3, #1976D2);
  margin: -20rpx -20rpx 30rpx -20rpx;
  color: white;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.development-notice {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: white;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.notice-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2196F3;
  margin: 30rpx 0 20rpx 0;
}

.notice-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
} 