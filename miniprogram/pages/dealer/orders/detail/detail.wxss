/* 页面基础样式 */
page {
  font-family: -apple-system-font, Helvetica Neue, sans-serif;
  background: #f7f8fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 状态头部 */
.status-header {
  background: linear-gradient(135deg, #0066cc, #0052a3);
  color: white;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.status-info {
  flex: 1;
}

.status-emoji {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.order-no {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.estimate-time {
  text-align: right;
}

.estimate-label {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 8rpx;
}

.estimate-value {
  font-size: 28rpx;
  font-weight: 600;
}

/* 状态时间线 */
.status-timeline {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
  position: relative;
}

.timeline-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 40rpx;
  top: 80rpx;
  bottom: -24rpx;
  width: 2rpx;
  background: #e5e5e5;
}

.timeline-item.completed::after {
  background: #0066cc;
}

.timeline-item.current::after {
  background: #ff6b6b;
}

.timeline-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  position: relative;
  z-index: 1;
}

.timeline-item.completed .timeline-icon {
  background: #0066cc;
  color: white;
}

.timeline-item.current .timeline-icon {
  background: #ff6b6b;
  color: white;
}

.icon-text {
  font-size: 32rpx;
  font-weight: bold;
}

.timeline-content {
  flex: 1;
  padding-top: 8rpx;
}

.timeline-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.timeline-item.pending .timeline-title {
  color: #999;
}

.timeline-time {
  font-size: 24rpx;
  color: #666;
}

.timeline-item.pending .timeline-time {
  color: #999;
}

/* 主要内容区域 */
.detail-content {
  flex: 1;
  padding-bottom: 140rpx;
}

/* 详情区块 */
.detail-section {
  background: #fff;
  border-radius: 24rpx;
  margin: 0 32rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.section-header {
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-content {
  padding: 32rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  color: #666;
  font-size: 32rpx;
}

.info-value {
  color: #333;
  font-weight: 500;
  font-size: 32rpx;
  text-align: right;
}

/* 颜色显示 */
.color-display {
  display: flex;
  align-items: center;
}

.color-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 1rpx solid #e5e5e5;
}

/* 价格高亮 */
.price-highlight {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: white;
  border-radius: 40rpx;
  padding: 8rpx 24rpx;
  font-weight: 600;
  font-size: 28rpx;
}

.price-highlight.negative {
  background: linear-gradient(135deg, #28a745, #20c997);
}

/* 总计行 */
.total-row {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx !important;
  margin-top: 16rpx;
  border-bottom: none !important;
}

.total-label {
  font-weight: 600;
  color: #333;
}

.total-price {
  color: #0066cc;
  font-weight: 600;
  font-size: 36rpx;
}

/* 免费标签 */
.info-value.free {
  color: #28a745;
  font-weight: 600;
}

/* 总价汇总 */
.total-summary {
  background: #fff;
  border-radius: 24rpx;
  margin: 0 32rpx 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.summary-breakdown {
  margin-bottom: 24rpx;
}

.breakdown-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.breakdown-item:last-child {
  border-bottom: none;
}

.breakdown-label {
  color: #666;
  font-size: 28rpx;
}

.breakdown-value {
  color: #333;
  font-size: 28rpx;
}

.final-total {
  background: linear-gradient(135deg, #0066cc, #0052a3);
  color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-label {
  font-size: 32rpx;
}

.total-amount {
  font-size: 48rpx;
  font-weight: 700;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  gap: 24rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 48rpx;
  font-weight: 600;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn {
  background: #f7f8fa;
  color: #666;
  border: 1rpx solid #d0d0d0;
}

.submit-btn {
  background: linear-gradient(135deg, #0066cc, #0052a3);
  color: white;
}

/* 加载覆盖层 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.9);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: spin 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 