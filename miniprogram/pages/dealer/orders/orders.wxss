/* 页面基础样式 */
page {
  font-family: -apple-system-font, Helvetica Neue, sans-serif;
  background: #f7f8fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Tab导航 */
.tab-nav {
  background: #fff;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-weight: 500;
  color: #999;
  position: relative;
}

.tab-item.active {
  color: #0066cc;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #0066cc;
  border-radius: 2rpx;
}

/* 筛选区域 */
.filter-section {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-scroll {
  white-space: nowrap;
  padding: 24rpx 0;
}

.filter-chips {
  display: inline-flex;
  padding: 0 32rpx;
  gap: 16rpx;
}

.filter-chip {
  background: #f0f0f0;
  border-radius: 40rpx;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
  white-space: nowrap;
  border: 1rpx solid transparent;
}

.filter-chip.active {
  background: #0066cc;
  color: white;
}

/* 批量操作栏 */
.batch-operations {
  background: #e3f2fd;
  border-bottom: 1rpx solid #bbdefb;
  padding: 24rpx 32rpx;
  opacity: 0;
  transform: translateY(-100%);
  transition: all 0.3s ease;
}

.batch-operations.show {
  opacity: 1;
  transform: translateY(0);
}

.batch-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.batch-left {
  display: flex;
  align-items: center;
}

.select-all-checkbox {
  margin-right: 16rpx;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
  margin-right: 24rpx;
}

.selected-count {
  font-size: 28rpx;
  color: #0066cc;
}

.batch-buttons {
  display: flex;
  gap: 16rpx;
}

.batch-btn {
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 24rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  border: none;
}

.batch-delete {
  background: #f5f5f5;
  color: #666;
}

.batch-submit {
  background: #0066cc;
  color: white;
}

/* 订单列表 */
.orders-list {
  flex: 1;
  padding-bottom: 32rpx;
}

.order-card {
  background: #fff;
  border-radius: 24rpx;
  margin: 16rpx 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  transition: all 0.3s ease;
}

.order-card:active {
  transform: scale(0.98);
}

/* 订单头部 */
.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.order-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.order-checkbox {
  margin-right: 16rpx;
}

.order-info {
  flex: 1;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

/* 状态标签 */
.status-badge {
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
}

.status-submitted {
  background: #d1ecf1;
  color: #0c5460;
}

.status-confirmed {
  background: #d4edda;
  color: #155724;
}

.status-shipped {
  background: #e2e3e5;
  color: #383d41;
}

.status-completed {
  background: #d1e7dd;
  color: #0f5132;
}

/* 车辆信息 */
.vehicle-info {
  margin-bottom: 24rpx;
}

.vehicle-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.vehicle-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.vehicle-config {
  font-size: 28rpx;
  color: #666;
}

.dealer-info {
  font-size: 24rpx;
  color: #999;
}

/* 订单底部 */
.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.total-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.create-time {
  font-size: 24rpx;
  color: #999;
}

.order-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 24rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  border: none;
}

.edit-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: #ff9500;
  color: white;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.empty-btn {
  background: #0066cc;
  color: white;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  border: none;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  animation: spin 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 确认对话框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: #fff;
  border-radius: 24rpx;
  width: 80%;
  max-width: 600rpx;
  overflow: hidden;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: 32rpx 32rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-body {
  padding: 32rpx;
}

.modal-message {
  font-size: 32rpx;
  color: #666;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  background: none;
}

.cancel-btn {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.confirm-btn {
  color: #0066cc;
  font-weight: 600;
} 