/* 页面基础样式 */
page {
  font-family: -apple-system-font, Helvetica Neue, sans-serif;
  background: #f7f8fa;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 加载状态覆盖层 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 64rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #0066cc;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

/* Tab导航 */
.tab-nav {
  background: #fff;
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-weight: 500;
  color: #999;
  position: relative;
}

.tab-item.active {
  color: #0066cc;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #0066cc;
  border-radius: 2rpx;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  padding-bottom: 140rpx;
}

/* 表单区块 */
.form-section {
  background: #fff;
  border-radius: 24rpx;
  margin: 24rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.section-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.section-title .icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

/* 数据状态显示 */
.data-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.status-text {
  font-size: 24rpx;
  color: #0066cc;
  background: #f0f7ff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-bottom: 8rpx;
}

.status-count {
  font-size: 20rpx;
  color: #999;
}

.price-status {
  font-size: 20rpx;
  color: #28a745;
}

.action-buttons {
  display: flex;
  gap: 12rpx;
}

.test-btn,
.price-btn,
.new-test-btn,
.create-btn,
.check-btn,
.refresh-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.test-btn {
  background: #fff3cd;
  border: 1rpx solid #ffc107;
}

.test-btn:active {
  background: #ffeaa7;
  transform: scale(0.95);
}

.price-btn {
  background: #f8d7da;
  border: 1rpx solid #dc3545;
}

.price-btn:active {
  background: #f1b0b7;
  transform: scale(0.95);
}

.new-test-btn {
  background: #e2e3ff;
  border: 1rpx solid #6366f1;
}

.new-test-btn:active {
  background: #c7d2fe;
  transform: scale(0.95);
}

.create-btn {
  background: #d4edda;
  border: 1rpx solid #28a745;
}

.create-btn:active {
  background: #c3e6cb;
  transform: scale(0.95);
}

.check-btn {
  background: #e2e3e5;
  border: 1rpx solid #6c757d;
}

.check-btn:active {
  background: #d6d8db;
  transform: scale(0.95);
}

.refresh-btn {
  background: #f0f7ff;
  border: 1rpx solid #0066cc;
}

.refresh-btn:active {
  background: #e6f3ff;
  transform: scale(0.95);
}

.test-icon {
  font-size: 24rpx;
  color: #856404;
}

.price-icon {
  font-size: 24rpx;
  color: #721c24;
}

.create-icon {
  font-size: 24rpx;
  color: #155724;
  font-weight: bold;
}

.check-icon {
  font-size: 24rpx;
  color: #495057;
}

.refresh-icon {
  font-size: 28rpx;
  color: #0066cc;
  font-weight: bold;
}

.form-content {
  padding: 32rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item .label {
  color: #666;
  font-size: 32rpx;
}

.form-item .value {
  color: #333;
  font-weight: 500;
  font-size: 32rpx;
}

/* 选择器显示 */
.picker-display {
  display: flex;
  align-items: center;
}

.picker-text {
  color: #333;
  font-size: 32rpx;
  margin-right: 16rpx;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  color: #0066cc;
  font-size: 32rpx;
  font-weight: bold;
}

/* 颜色显示 */
.color-display {
  display: flex;
  align-items: center;
}

.color-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 1rpx solid #e5e5e5;
}

/* 价格标签 */
.price-tag {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: white;
  border-radius: 40rpx;
  padding: 8rpx 24rpx;
  font-weight: 600;
  font-size: 28rpx;
}

/* 配置选项 */
.config-list {
  margin-bottom: 32rpx;
}

.config-item {
  border: 1rpx solid #e5e5e5;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.config-item.selected {
  border-color: #0066cc;
  background: #f0f7ff;
}

.config-content {
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.config-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.config-icon {
  color: #0066cc;
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 32rpx;
  text-align: center;
}

.config-item:not(.selected) .config-icon {
  color: #ccc;
}

.config-info {
  flex: 1;
}

.config-name {
  display: block;
  font-weight: 500;
  color: #333;
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.config-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.config-price {
  color: #ff6b6b;
  font-weight: 600;
  font-size: 28rpx;
}

.config-price.negative {
  color: #28a745;
}

/* 配置小计 */
.config-total {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.total-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-label {
  color: #666;
  font-size: 32rpx;
}

.total-price {
  color: #0066cc;
  font-weight: 600;
  font-size: 36rpx;
}

/* 提车方式 */
.pickup-options {
  margin-bottom: 32rpx;
}

.pickup-item {
  border: 1rpx solid #e5e5e5;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.pickup-item.selected {
  border-color: #0066cc;
  background: #f0f7ff;
}

.pickup-content {
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pickup-left {
  display: flex;
  align-items: center;
}

.pickup-icon {
  color: #0066cc;
  font-size: 32rpx;
  margin-right: 24rpx;
}

.pickup-item:not(.selected) .pickup-icon {
  color: #ccc;
}

.pickup-name {
  font-weight: 500;
  color: #333;
  font-size: 32rpx;
}

.pickup-fee {
  color: #28a745;
  font-weight: 600;
  font-size: 28rpx;
}

/* 总价计算区域 */
.total-section {
  background: #fff;
  border-radius: 24rpx;
  margin: 24rpx 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.total-breakdown {
  margin-bottom: 24rpx;
}

.breakdown-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.breakdown-item:last-child {
  border-bottom: none;
}

.breakdown-label {
  color: #666;
  font-size: 28rpx;
}

.breakdown-value {
  color: #333;
  font-size: 28rpx;
}

.total-final {
  background: linear-gradient(135deg, #0066cc, #0052a3);
  color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-final .total-label {
  font-size: 32rpx;
}

.total-amount {
  font-size: 48rpx;
  font-weight: 700;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  gap: 24rpx;
  z-index: 100;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 48rpx;
  font-weight: 600;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-secondary {
  background: #f7f8fa;
  color: #666;
  border: 1rpx solid #d0d0d0;
}

.btn-primary {
  background: linear-gradient(135deg, #0066cc, #0052a3);
  color: white;
}

/* 选择器弹窗 */
.picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.picker-modal.show {
  opacity: 1;
  visibility: visible;
}

.picker-content {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  width: 100%;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.picker-modal.show .picker-content {
  transform: translateY(0);
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.picker-close {
  color: #999;
  font-size: 40rpx;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-list {
  flex: 1;
  max-height: 600rpx;
}

.picker-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-option:last-child {
  border-bottom: none;
}

.picker-option.selected {
  background: #f0f7ff;
  color: #0066cc;
}

.option-text {
  font-size: 32rpx;
}

.option-check {
  color: #0066cc;
  font-size: 32rpx;
  font-weight: bold;
} 